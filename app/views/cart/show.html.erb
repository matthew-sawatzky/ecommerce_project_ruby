<h1>Your Cart</h1>

<% if @items.any? %>
  <ul>
    <% @items.each do |item| %>
      <li>
        <%= item.card.name %> - Quantity: <%= item.quantity %> - Price: <%= item.card.price %>
      </li>
    <% end %>
  </ul>
  <h2>Total: <%= @items.sum { |item| item.card.price * item.quantity } %></h2>
  <%= button_to 'Checkout', checkout_cart_path, method: :post %>
<% else %>
  <p>Your cart is empty.</p>
<% end %>
