<!DOCTYPE html>
<html>
<head>
  <title>PokemonStore</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>
<body>
<h1>Pokemon Cards</h1>
<%= render 'layouts/navigation' %>

<%= form_with url: select_card_sets_path, method: :post, local: true do |form| %>
  <div>
    <%= form.label :id, "Select Set" %>
    <%= form.collection_select :id, @card_sets, :id, :name, prompt: "PokÃ©mon Sets" %>
    <%= form.submit "Go" %>
  </div>
<% end %>


<%= form_with url: search_cards_path, method: :get, local: true do |form| %>
  <%= form.label :query, "Search Cards" %>
  <%= form.text_field :query %>
  <%= form.submit "Search" %>
<% end %>

<%= yield %>
</body>
</html>
